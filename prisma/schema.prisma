// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  STUDENT
  PUBLIC
  ADMIN
}

enum Province {
  EASTERN_CAPE
  FREE_STATE
  GAUTENG
  KWAZULU_NATAL
  LIMPOPO
  MPUMALANGA
  NORTHERN_CAPE
  NORTH_WEST
  WESTERN_CAPE
}

enum VoteStatus {
  ACTIVE
  EXPIRED
  USED
}

enum QuizDifficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  emailVerified     DateTime?
  phone             String?
  phoneVerified     DateTime?
  password          String
  userType          UserType  @default(PUBLIC)
  
  // Personal Information
  firstName         String
  lastName          String
  dateOfBirth       DateTime
  province          Province
  municipality      String?
  town              String?
  homeAddress       String
  
  // Student-specific fields
  institution       String?
  campus            String?
  residence         String?
  
  // Account status
  isActive          Boolean   @default(true)
  isVerified        Boolean   @default(false)
  isBanned          Boolean   @default(false)
  
  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  lastLogin         DateTime?
  
  // Relations
  votes             Vote[]
  nominations       Nomination[]
  quizAttempts      QuizAttempt[]
  achievements      UserAchievement[]
  sessions          Session[]
  accounts          Account[]
  
  @@index([email])
  @@index([userType])
  @@index([province])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Contestant {
  id              String    @id @default(cuid())
  name            String
  bio             String    @db.Text
  institution     String
  campus          String
  province        Province
  imageUrl        String?
  videoUrl        String?
  
  isActive        Boolean   @default(true)
  isEliminated    Boolean   @default(false)
  eliminatedAt    DateTime?
  
  totalVotes      Int       @default(0)
  weeklyVotes     Int       @default(0)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  votes           Vote[]
  nominations     Nomination[]
  
  @@index([isActive, isEliminated])
  @@index([totalVotes])
}

model Vote {
  id              String     @id @default(cuid())
  userId          String
  contestantId    String
  voteCount       Int        @default(1)
  isPaid          Boolean    @default(false)
  amount          Float?
  transactionId   String?
  
  status          VoteStatus @default(ACTIVE)
  votingRound     Int        // Week number or round
  
  createdAt       DateTime   @default(now())
  
  user            User       @relation(fields: [userId], references: [id])
  contestant      Contestant @relation(fields: [contestantId], references: [id])
  
  @@index([userId, votingRound])
  @@index([contestantId])
  @@index([createdAt])
}

model Nomination {
  id              String     @id @default(cuid())
  userId          String
  contestantId    String?
  
  nomineeFirstName String
  nomineeLastName  String
  nomineeEmail     String
  nomineePhone     String
  nomineeInstitution String
  nomineeCampus    String
  nomineeProvince  Province
  
  reason          String     @db.Text
  supportingInfo  String?    @db.Text
  
  status          String     @default("pending") // pending, approved, rejected
  reviewedAt      DateTime?
  reviewedBy      String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  user            User       @relation(fields: [userId], references: [id])
  contestant      Contestant? @relation(fields: [contestantId], references: [id])
  
  @@index([status])
  @@index([createdAt])
}

model Quiz {
  id              String         @id @default(cuid())
  title           String
  description     String?        @db.Text
  difficulty      QuizDifficulty @default(MEDIUM)
  timeLimit       Int            // in seconds
  
  isActive        Boolean        @default(false)
  scheduledFor    DateTime
  expiresAt       DateTime
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  questions       QuizQuestion[]
  attempts        QuizAttempt[]
  
  @@index([isActive, scheduledFor])
}

model QuizQuestion {
  id              String   @id @default(cuid())
  quizId          String
  question        String   @db.Text
  options         Json     // Array of options
  correctAnswer   Int      // Index of correct option
  points          Int      @default(10)
  order           Int
  
  createdAt       DateTime @default(now())
  
  quiz            Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  @@index([quizId])
}

model QuizAttempt {
  id              String   @id @default(cuid())
  userId          String
  quizId          String
  
  answers         Json     // User's answers
  score           Int
  completedAt     DateTime @default(now())
  timeTaken       Int      // in seconds
  
  user            User     @relation(fields: [userId], references: [id])
  quiz            Quiz     @relation(fields: [quizId], references: [id])
  
  @@unique([userId, quizId])
  @@index([quizId, score])
}

model Achievement {
  id              String   @id @default(cuid())
  name            String
  description     String
  imageUrl        String?
  criteria        Json     // Criteria for unlocking
  points          Int      @default(0)
  
  createdAt       DateTime @default(now())
  
  users           UserAchievement[]
}

model UserAchievement {
  id              String   @id @default(cuid())
  userId          String
  achievementId   String
  unlockedAt      DateTime @default(now())
  
  user            User       @relation(fields: [userId], references: [id])
  achievement     Achievement @relation(fields: [achievementId], references: [id])
  
  @@unique([userId, achievementId])
  @@index([userId])
}

model Sponsor {
  id              String   @id @default(cuid())
  name            String
  tier            String   // title, premium, supporting, in-kind
  logoUrl         String
  websiteUrl      String?
  description     String?  @db.Text
  
  investment      Float?
  benefits        Json?
  
  isActive        Boolean  @default(true)
  startDate       DateTime
  endDate         DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([tier, isActive])
}

model LiveStream {
  id              String   @id @default(cuid())
  title           String
  description     String?  @db.Text
  platform        String   // facebook, tiktok, youtube
  streamUrl       String
  embedCode       String?  @db.Text
  
  scheduledStart  DateTime
  scheduledEnd    DateTime
  actualStart     DateTime?
  actualEnd       DateTime?
  
  isLive          Boolean  @default(false)
  viewCount       Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([isLive, scheduledStart])
}

model Analytics {
  id              String   @id @default(cuid())
  eventType       String   // page_view, vote_cast, quiz_attempt, etc.
  eventData       Json
  userId          String?
  
  ipAddress       String?
  userAgent       String?
  
  timestamp       DateTime @default(now())
  
  @@index([eventType, timestamp])
  @@index([userId])
}

model SystemConfig {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String   @db.Text
  description     String?
  
  updatedAt       DateTime @updatedAt
}
