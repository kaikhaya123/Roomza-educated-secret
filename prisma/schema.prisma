generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  STUDENT
  PUBLIC
  ADMIN
}

enum Province {
  EASTERN_CAPE
  FREE_STATE
  GAUTENG
  KWAZULU_NATAL
  LIMPOPO
  MPUMALANGA
  NORTHERN_CAPE
  NORTH_WEST
  WESTERN_CAPE
}

enum VoteStatus {
  ACTIVE
  EXPIRED
  USED
}

enum QuizDifficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  emailVerified     DateTime?
  phone             String?
  phoneVerified     DateTime?
  password          String
  userType          UserType  @default(PUBLIC)
  firstName         String
  lastName          String
  dateOfBirth       DateTime
  province          Province
  homeAddress       String
  municipality      String?
  town              String?
  institution       String?
  campus            String?
  residence         String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  votes             Vote[]
  nominations       Nomination[]
  achievements      UserAchievement[]
  quizAttempts      QuizAttempt[] // <-- Correctly placed here
}

model Vote {
  id              String     @id @default(cuid())
  userId          String
  contestantId    String
  voteCount       Int        @default(1)
  isPaid          Boolean    @default(false)
  amount          Float?
  transactionId   String?
  status          VoteStatus @default(ACTIVE)
  votingRound     Int
  createdAt       DateTime   @default(now())
  user            User       @relation(fields: [userId], references: [id])
  contestant      Contestant @relation(fields: [contestantId], references: [id])
  @@index([userId, votingRound])
  @@index([contestantId])
  @@index([createdAt])
}

model Contestant {
  id           String   @id @default(cuid())
  firstName    String
  lastName     String
  dateOfBirth  DateTime?
  province     Province?
  homeAddress  String?
  phone        String?
  municipality String?
  town         String?
  institution  String?
  campus       String?
  residence    String?
  bio          String?
  photoUrl     String?
  votes        Vote[]
  nominations  Nomination[]
  isActive     Boolean   @default(true)
  isEliminated Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  @@index([isActive, isEliminated])
}

model Nomination {
  id                String     @id @default(cuid())
  userId            String
  contestantId      String?
  nomineeFirstName  String
  nomineeLastName   String
  nomineeEmail      String
  nomineePhone      String
  nomineeInstitution String
  nomineeCampus     String
  nomineeProvince   Province
  reason            String     @db.Text
  supportingInfo    String?    @db.Text
  status            String     @default("pending")
  reviewedAt        DateTime?
  reviewedBy        String?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  user              User       @relation(fields: [userId], references: [id])
  contestant        Contestant? @relation(fields: [contestantId], references: [id])
  @@index([status])
  @@index([createdAt])
}

model Sponsor {
  id              String   @id @default(cuid())
  name            String
  tier            String
  logoUrl         String
  websiteUrl      String?
  description     String?  @db.Text
  investment      Float?
  benefits        Json?
  isActive        Boolean  @default(true)
  startDate       DateTime
  endDate         DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  @@index([tier, isActive])
}

model Quiz {
  id              String         @id @default(cuid())
  title           String
  description     String?        @db.Text
  difficulty      QuizDifficulty @default(MEDIUM)
  timeLimit       Int
  isActive        Boolean        @default(false)
  scheduledFor    DateTime
  expiresAt       DateTime
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  questions       QuizQuestion[]
  attempts        QuizAttempt[]
  @@index([isActive, scheduledFor])
}

model QuizQuestion {
  id              String   @id @default(cuid())
  quizId          String
  question        String   @db.Text
  options         Json
  correctAnswer   Int
  points          Int      @default(10)
  order           Int
  createdAt       DateTime @default(now())
  quiz            Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  @@index([quizId])
}

model QuizAttempt {
  id              String   @id @default(cuid())
  userId          String
  quizId          String
  answers         Json
  score           Int
  completedAt     DateTime @default(now())
  timeTaken       Int
  user            User     @relation(fields: [userId], references: [id])
  quiz            Quiz     @relation(fields: [quizId], references: [id])
  @@unique([userId, quizId])
  @@index([quizId, score])
}

model Achievement {
  id              String   @id @default(cuid())
  name            String
  description     String
  imageUrl        String?
  criteria        Json
  points          Int      @default(0)
  createdAt       DateTime @default(now())
  users           UserAchievement[]
}

model UserAchievement {
  id              String   @id @default(cuid())
  userId          String
  achievementId   String
  unlockedAt      DateTime @default(now())
  user            User       @relation(fields: [userId], references: [id])
  achievement     Achievement @relation(fields: [achievementId], references: [id])
  @@unique([userId, achievementId])
  @@index([userId])
}

model LiveStream {
  id              String   @id @default(cuid())
  title           String
  description     String?  @db.Text
  platform        String
  streamUrl       String
  embedCode       String?  @db.Text
  scheduledStart  DateTime
  scheduledEnd    DateTime
  actualStart     DateTime?
  actualEnd       DateTime?
  isLive          Boolean  @default(false)
  viewCount       Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  @@index([isLive, scheduledStart])
}

model Analytics {
  id              String   @id @default(cuid())
  eventType       String
  eventData       Json
  userId          String?
  ipAddress       String?
  userAgent       String?
  timestamp       DateTime @default(now())
  @@index([eventType, timestamp])
  @@index([userId])
}

model SystemConfig {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String   @db.Text
  description     String?
  updatedAt       DateTime @updatedAt
}